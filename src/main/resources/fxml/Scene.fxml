<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.ufo.FXMLController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Forma">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="boxForma">
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button fx:id="btnConta" mnemonicParsing="false" onAction="#handleConta" text="Conta" />
               </children>
            </HBox>
            <Label text="Numero di avvistamenti" />
            <TextField fx:id="txtMessaggio" disable="true" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
